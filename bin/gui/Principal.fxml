<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.Principal">

    <!-- Título -->
    <top>
        <Label prefHeight="52.0" style="-fx-font-size: 18px; -fx-padding: 10;" text="The new Game of the year" BorderPane.alignment="CENTER" />
    </top>

    <!-- Contenido principal: HBox con grid + panel -->
    <center>
        <HBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
            <children>

                <!-- GRID DE BOTONES (ocupa ~60% del espacio) -->
                <GridPane fx:id="gameGrid" maxHeight="Infinity" maxWidth="Infinity" prefWidth="500" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="25" vgrow="ALWAYS" />
                        <RowConstraints percentHeight="25" vgrow="ALWAYS" />
                        <RowConstraints percentHeight="25" vgrow="ALWAYS" />
                        <RowConstraints percentHeight="25" vgrow="ALWAYS" />
                    </rowConstraints>
                    <children>
                        <!-- Botones 4x4 con fuente 31 -->
                        <Button fx:id="b1" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b2" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b3" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b4" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="3" GridPane.rowIndex="0">
                            <font><Font size="31.0" /></font>
                        </Button>

                        <Button fx:id="b5" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b6" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b7" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b8" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="3" GridPane.rowIndex="1">
                            <font><Font size="31.0" /></font>
                        </Button>

                        <Button fx:id="b9" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b10" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b11" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="2" GridPane.rowIndex="2">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b12" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="3" GridPane.rowIndex="2">
                            <font><Font size="31.0" /></font>
                        </Button>

                        <Button fx:id="b13" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b14" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b15" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="2" GridPane.rowIndex="3">
                            <font><Font size="31.0" /></font>
                        </Button>
                        <Button fx:id="b16" maxHeight="Infinity" maxWidth="Infinity" text="?" GridPane.columnIndex="3" GridPane.rowIndex="3">
                            <font><Font size="31.0" /></font>
                        </Button>
                    </children>
                </GridPane>

                <!-- PANEL DE INFORMACIÓN (ocupa ~40%) -->
                <VBox alignment="TOP_LEFT" prefWidth="280" spacing="15.0" HBox.hgrow="SOMETIMES">
                    <children>
                        <Label alignment="CENTER_RIGHT" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Rècord: " textAlignment="RIGHT" />

                        <HBox alignment="TOP_RIGHT" spacing="10">
                            <children>
                                <Label text="Punts:" />
                                <Label fx:id="scoreLabel" contentDisplay="RIGHT" style="-fx-border-color: black; -fx-padding: 5px; -fx-min-width: 60px; -fx-alignment: center; -fx-font-size: 16px;" />
                            </children>
                        </HBox>

                        <HBox alignment="TOP_RIGHT" spacing="10">
                            <children>
                                <Button fx:id="exitButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Sortir" HBox.hgrow="ALWAYS">
                                    <font><Font size="20.0" /></font>
                                </Button>
                                <Button fx:id="resetButton" alignment="CENTER_RIGHT" text="Reinicia pantalla" HBox.hgrow="ALWAYS">
                                    <font><Font size="20.0" /></font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </HBox>
    </center>
</BorderPane>
